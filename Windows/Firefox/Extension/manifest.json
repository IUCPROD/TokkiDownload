{
  
  "description": "Browser integration of youtube-dl+ffmpeg via nativeMessaging. Starts commandline program with given url and optinos",
  "manifest_version": 2,
  "name": "TokkiDownload",
  "version": "2.0",
  "icons": {
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tokkidownload@tokki.be",
      "strict_min_version": "67.0"
    }
  },

  "background":{
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"      
    },
    "default_popup": "popup/defWindow.html"
  },
 
  "permissions": [
    "nativeMessaging",
    "tabs",
    "storage"
  ]

}